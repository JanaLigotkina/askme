<% if question.errors.any? %>
  <div class="mt">
    <% question.errors.full_messages.each do |message| %>
      <p class="mb-sm text-red"><%= message %></p>
    <% end %>
  </div>
<% end %>

<%= form_with model: question, data: {turbo: false} do |form| %>
	<p><%= form.label :body, 'Question Text' %></p>
	<p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>
	<p class="mt"><%= form.label :user_id %></p>
	<p><%= form.text_field :user_id, class: 'form-text-field' %></p>
	<p class="mt"><%= form.submit 'Create', class: 'button button-main' %></p>
<% end %>
