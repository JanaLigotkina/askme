<div class="container">
	<h2 class="title-lg mb">Questions</h2>

	<% @questions.each do |question| %>
	  <% class_question_hidden = question.hidden ? "question_is_hidden" : "question_is_visible" %>
	  <%= content_tag :p, class: ["mb-sm", class_question_hidden] do %>
	    <%= link_to "Question #{question.id}", question_path(question.id) %>
	  <% end %>  
	<% end %>  

	<p class="mt">
		<%= link_to "Create new question", new_question_path, class: 'button button-main' %>
	</p>
</div>
