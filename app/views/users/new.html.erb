<div class="container">
  <h2 class="title">Join and ask questions!</h2>

  <div class="mt">
    <%= form_with model: @user do |form| %>
      <p><%= form.label :name, 'Your name' %></p>
      <p><%= form.text_field :name, class: 'form-text-field' %></p>

      <p class="mt"><%= form.label :nickname, 'Your nickname' %></p>
      <p><%= form.text_field :nickname, class: 'form-text-field' %></p>

      <p class="mt"><%= form.label :email %></p>
      <p><%= form.text_field :email, class: 'form-text-field' %></p>

      <p class="mt"><%= form.label :password, 'Пароль' %></p>
      <p><%= form.password_field :password, class: 'form-text-field' %></p>

      <p><%= form.submit "Register", class: 'button button-main mt-lg' %></p>
    <% end %>
  </div>
</div>

